PORT=8000
LOGGER=true
SALT=12
USER_ACTIVITIES_MAX=20
USER_NOTIFICATIONS_MAX=30

# ============================================
# AWS Secrets Manager Configuration
# ============================================
# When AWS_SECRET_NAME is set, secrets will be fetched from AWS Secrets Manager.
# If not set, the application falls back to environment variables below.
#
# AWS_REGION=us-east-1
# AWS_SECRET_NAME=real-estate-management/secrets
#
# Required IAM permissions: secretsmanager:GetSecretValue
#
# Expected secret structure in AWS Secrets Manager (JSON):
# {
#   "SECRET_KEY": "your-jwt-secret-key",
#   "DB_CONNECT": "mongodb://...",
#   "GOOGLE_AUTH_CLIENT_ID": "your-client-id.apps.googleusercontent.com",
#   "MAP_KEY": "your-map-api-key",
#   "WEBSOCKET_URL": "ws://your-domain/websocket"
# }
# ============================================

# Fallback values (used when AWS Secrets Manager is not configured)
# WARNING: Do not use default 'secret' in production - this is a security vulnerability
SECRET_KEY='your-secure-jwt-secret-key'
DB_CONNECT=mongodb://localhost:27017/database-name

# OPTIONAL for GOOGLE SIGNIN
GOOGLE_AUTH_CLIENT_ID='[something].apps.googleusercontent.com'

# OPTIONAL for frontend config
MAP_KEY=''
WEBSOCKET_URL='ws://localhost:8000/websocket'
